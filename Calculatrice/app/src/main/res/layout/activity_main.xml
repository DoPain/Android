<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="73dp">

    <Button
        android:id="@+id/buttonEgal"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/buttonPoint"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text=","
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/buttonMoins"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonMul" />

    <Button
        android:id="@+id/button5"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button6"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button8"
        android:layout_width="64dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toTopOf="@+id/button9" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="68dp"
        android:layout_height="50dp"
        android:layout_marginLeft="264dp"
        android:layout_marginStart="264dp"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@+id/buttonDiv"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonMul"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="x"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonDiv" />

    <Button
        android:id="@+id/button7"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="140dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEcran" />

    <Button
        android:id="@+id/button9"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/button8" />

    <Button
        android:id="@+id/button0"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button3"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button2"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button1"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/buttonEgal"
        app:layout_constraintTop_toBottomOf="@+id/buttonMoins" />

    <TextView
        android:id="@+id/textEcran"
        android:layout_width="313dp"
        android:layout_height="118dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>